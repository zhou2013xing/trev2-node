html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body

    div(class="navbar navbar-inverse navbar-fixed-top")
      div.navbar-inner
        div.container
          a(class="btn btn-navbar",data-toggle="collapse",data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a(class="brand",href="/") TREV
          div.nav-collapse
            ul.nav
              - if (user)  
                li.active
                  a(href="/") Overview
                li.dropdown
                  a(href="#",class="dropdown-toggle",data-toggle="dropdown") Reps 
                    b.caret
                  ul.dropdown-menu
                    - if (repList.length < 1)
                      li 
                        p 
                          i No assigned reps
                      li.divider
                      li.nav-header Options
                      li
                        a(href="/rep/add") Add a rep
                    - else
                      for rep in repList
                        li 
                          a(href="/rep/edit/#{rep._id}") #{rep.repName}
                      li.divider
                      li.nav-header Options
                      li
                        a(href="/rep/add") Add a rep
                      li
                        a(href="/reps/edit") Edit reps

            p.navbar-text.pull-right
              - if (user)
                  span Logged in as 
                  a(href="/logout") #{user.user}
              - else
                a(href="/login") Login user


    partial('alert', flash)
