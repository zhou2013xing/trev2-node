mixin repsList(rep)
  tr
    td #{rep.repName}
    td [Team Name]
    td 
      //- button(href="/rep/delete/#{rep._id}",class="btn btn-danger") Delete
      a(href="/rep/delete/#{rep._id}") Delete
      a(href="/rep/edit/#{rep._id}") Edit

div.row
  div.span12 
    h1= title
    p (Team overview will show up here)

partial('alert', flash)
- if (user)
  table(class="table table-bordered table-hover table-condensed")
    thead
      tr
        th Name
        th Team
        th Options
    tbody
    - for (var i = 0; i < repList.length; i++)
        mixin repsList(repList[i])
        - if (i + 1 < repList.length)
          mixin repsList(repList[++i])