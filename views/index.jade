mixin repsList(rep)
  tr
    td #{rep.repName}
    td [Team Name]
    td #{rep.teamLead.username}

div.row
  div.span12 
    h1= title

partial('alert', flash)
- if (user)
  - if (repList.length < 1)
    p There are currently no reps assigned to you
  - else
    table(class="table table-bordered table-hover table-condensed")
      thead
        tr
          th Name
          th Team
          th Team Lead
      tbody
      - for rep in repList
        tr
          td #{rep.repName}
          td [Team Name]
          td #{rep.teamLead.username}
    